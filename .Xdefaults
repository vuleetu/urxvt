!URxvt.color12:#839496
!URxvt.color13:#6C71C4
!URxvt.color14:#93A1A1
!URxvt.color15:#FDF6E3
!滚动条
URxvt.scrollBar:True
URxvt.scrollBar_right:True
URxvt.scrollBar_floating: False
URxvt.scrollstyle:plain
!屏幕缓冲
URxvt.saveLines:10000
URxvt.color12:DodgerBlue
URxvt.menu:/etc/X11/rxvt.menu
URxvt.preeditType:Root
!Icon
URxvt.iconFile:/usr/share/icons/gnome/16x16/apps/terminal.png
!Set TERM
URxvt.termName:xterm
!Set browser
URxvt.perl-ext-common:default,matcher
URxvt.urlLauncher:chromium-browser
URxvt.matcher.button:1
!Tab support
URxvt.perl-ext-common:  default,tabbed
!Shorcut HELP
!Shift+ ↓ new tab
!Shift+ ← go to left tab
!Shift+ → go to right tab
!Ctrl+ ← move tab to the left
!Ctrl+ → move tab to the right
!Ctrl+D: close tab
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    3
URxvt.tabbed.tab-bg:    0
!窗口大小设置
URxvt.geometry:300x100
